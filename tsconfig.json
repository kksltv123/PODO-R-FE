{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strict": true,
      "strictNullChecks": false,
      "typeRoots": ["./@types", "./node_modules/@types"]
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }